{
  "name": "airdrop-cli",
  "version": "1.0.0",
  "description": "package-server",
  "author": "J. Harshbarger",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "start": "live-server ./test/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:setup": "npm run test:clean && npm run test:setup:pkgs && npm run test:setup:bundles",
    "test:setup:pkgs": "NODE_ENV=development airdrop add es-module-shims@0.2.3 d3@5.9.2 lit-html@1.0.0",
    "test:setup:bundles": "NODE_ENV=development airdrop ab haunted@4.2.0 lit-element@2.1.0",
    "test:clean": "rm -rf \"./test/-\""
  },
  "dependencies": {
    "@swimlane/prettier-config-swimlane": "^2.0.0",
    "gluegun": "^3.0.0",
    "ngraph.graph": "0.0.18",
    "npmgraphbuilder": "^2.2.0",
    "pacote": "^9.5.0",
    "reflect-metadata": "^0.1.12",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-security": "^1.15.0",
    "tslint-config-swimlane": "^4.0.0",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "jest": "^24.5.0",
    "prettier": "^1.14.2",
    "rollup": "^1.4.1",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "bin": {
    "airdrop": "./bin/airdrop"
  }
}
