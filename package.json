{
  "name": "@swimlane/airdrop-cli",
  "version": "1.0.0-rc1.5",
  "description": "package-server",
  "author": "J. Harshbarger",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "prestart": "npm run test:setup",
    "start": "live-server ./test/",
    "pretest": "rimraf ./test/-/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:setup": "npm run test:setup:pkgs && npm run test:setup:bundles",
    "test:setup:pkgs": "airdrop add es-module-shims@0.2.3 lit-html@1.0.0 haunted@4.2.0 lit-element@2.1.0 systemjs@3.1.0 @webcomponents/webcomponentsjs@2.2.8 --clean",
    "test:setup:bundles": "airdrop add d3@5.9.2 --bundle --optimize",
    "prepublishOnly": "rimraf ./dist && npm run build",
    "version": "chg release -y && git add -A CHANGELOG.md",
    "np": "np"
  },
  "dependencies": {
    "@swimlane/prettier-config-swimlane": "^2.0.0",
    "cosmiconfig": "^5.2.0",
    "fs-jetpack": "^2.2.2",
    "gluegun": "^3.0.0",
    "ngraph.graph": "0.0.18",
    "npm-package-arg": "^6.1.0",
    "npmgraphbuilder": "^2.2.0",
    "pacote": "^9.5.0",
    "reflect-metadata": "^0.1.12",
    "rollup-plugin-terser": "^4.0.4",
    "semver": "^6.0.0",
    "tar": "^4.4.8",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-security": "^1.15.0",
    "tslint-config-swimlane": "^4.0.0",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "chg": "^0.4.0",
    "execa": "^1.0.0",
    "jest": "^23.6.0",
    "nock": "^10.0.6",
    "np": "^4.0.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "rollup": "^1.4.1",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/test/"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "bin": {
    "airdrop": "./bin/airdrop"
  }
}
